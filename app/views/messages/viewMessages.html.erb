<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Tables</title>
	 <script>
	  $(document).ready(function(){
	  $("#addEntry").click(function () {
	  	document.getElementById('viewEntryFields').style.display = "block";
});
});
  </script>
   </head>
<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!--  page-wrapper -->
        <div id="page-wrapper">

            <div class="row">
                <!-- Page Header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Tables</h1>
                </div>
                <!--End Page Header -->
            </div>
	    <!--Table-->
	            <div class="panel panel-primary">
	                <div class="panel-heading">
	                    <i class="fa fa-bar-chart-o fa-fw"></i>Messages
	                </div>
	                <div class="panel-body">
	                    <div class="row">
	                        <div class="col-lg-12">
		                        <form role="form" action="viewMessages">
			                		<input id="startDateTime" style='width:auto' name="startDateTime" class="form-control" placeholder="Enter start date">
			                		<input id="endDateTime" style='width:auto' name="endDateTime" class="form-control" placeholder="Enter end date">
				                    <input id="saveEntry" style='width:auto' value="Search" type="Submit" class="btn btn-success"></input>
		               			 </form>
	                            <div class="table-responsive" style="overflow:scroll;">
	                                <table class="table table-bordered table-hover table-striped">
	                                    <thead>
	                                        <tr>
	                                            <th>Id</th>
	                                            <th>Message Type</th>
	                                            <th>Date Time</th>
	                                            <th>Transfer Protocol</th>
	                                        </tr>
	                                    </thead>
	                                    <tbody>
	                                    	<% @messages.each do |message| %>
	                                        <tr>
	                                            <td>
	                                            	<a href="message?id=<%= message.msg_id %>"><%= message.msg_id %></a>
	                                            </td>
	                                            <td><%= message.message_type.msgtype_name %></td>
                                              	<td><%= message.msg_datetime %></td>
                                              	<% if message.message_type.electronic_address.eaddress_type == 1 %>
                                              	<td>EDIFACT</td>
                                              	<% end %>
                                              	<% if message.message_type.electronic_address.eaddress_type == 2 %>
                                              	<td>GS1</td>
                                              	<% end %>
                                              	<% if message.message_type.electronic_address.eaddress_type == 0 %>
                                              	<td>Internal</td>
                                              	<% end %>
	                                        </tr>	
	                                        <% end %>                                       
	                                    </tbody>
	                                </table>
	                            </div>
	                        </div>
	                    </div>
	                    <!-- /.row -->
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <!--End of Table-->
        </div>
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->

</body>

</html>