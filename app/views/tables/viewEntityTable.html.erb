<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Tables</title>
    <!-- Core CSS - Include with every page -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
	 <script>
	  $(document).ready(function(){
	  $("#addEntry").click(function () {
	  	document.getElementById('viewEntryFields').style.display = "block";
});
});
  </script>
   </head>
<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!--  page-wrapper -->
        <div id="page-wrapper">

            <div class="row">
                <!-- Page Header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Tables</h1>
                </div>
                <!--End Page Header -->
            </div>
	    <!--Table-->
	            <div class="panel panel-primary">
	                <div class="panel-heading">
	                    <i class="fa fa-bar-chart-o fa-fw"></i>Entity
	                </div>

	                <div class="panel-body">
	                    <div class="row">
	                        <div class="col-lg-12">
	                            <div class="table-responsive">
	                                <table class="table table-bordered table-hover table-striped">
	                                    <thead>
	                                        <tr>
	                                            <th>Id</th>
	                                            <th>Name</th>
	                                            <th>Label</th>
	                                            <th>Status Id</th>
	                                            <th>Role</th>
	                                            <th>Country</th>
	                                            <th>Subscription Type</th>
	                                            <th>ABN</th>
	                                            <th>Sender Id</th>
	                                            <th>Receiver Id</th>
	                                            <th>Company Id</th>
	                                        </tr>
	                                    </thead>
	                                    <tbody>
	                                    	<% @entity_table.each do |entity| %>
	                                        <tr>
	                                            <td><%= entity.entity_id %></td>
	                                            <td><%= entity.entity_name %></td>
                                                <td><%= entity.entity_label %></td> 
                                                <td><%= entity.entity_status_id %></td>  
                                                <td><%= entity.entity_role %></td>  
                                                <td><%= entity.entity_country %></td>  
                                                <td><%= entity.entity_subscr_type %></td>  
                                                <td><%= entity.entity_abn %></td>  
                                                <td><%= entity.entity_sender_id %></td>  
                                                <td><%= entity.entity_receiver_id %></td>  
                                                <td><%= entity.entity_company_id %></td>    
	                                        </tr>	
	                                        <% end %>                                       
	                                    </tbody>
	                                </table>
	                            </div>
	                            <div>
	                             	<button id="addEntry" type="button" class="btn btn-primary">Add New Entry</button>
	                            </div>
	                            <br>
	                             <div id="viewEntryFields" style="display:none;" class="table-responsive">
	                             	<form role="form" action="createNewEntity">
                                		<input id="entityId" style='width:auto' name="entityId" class="form-control" placeholder="Enter id">
                            			<br>
                                		<input id="entityName" style='width:auto' name="entityName" class="form-control" placeholder="Enter name">
                            			<br>
                                		<input id="entityLabel" style='width:auto' name="entityLabel" class="form-control" placeholder="Enter Label">
                                    	<br>
                                		<input id="entityStatusId" style='width:auto' name="entityStatusId" class="form-control" placeholder="Enter Status Id">
                                    	<br>
                                		<input id="entityRole" style='width:auto' name="entityRole" class="form-control" placeholder="Enter Role">
                                    	<br>
                                		<input id="entityCountry" style='width:auto' name="entityCountry" class="form-control" placeholder="Enter Country">
                                		<br>
                                		<input id="entitySubscrType" style='width:auto' name="entitySubscrType" class="form-control" placeholder="Enter Subscribtion Type">
                                    	<br>
                                		<input id="entityAbn" style='width:auto' name="entityAbn" class="form-control" placeholder="Enter Abn">
                                    	<br>
                                		<input id="entitySenderId" style='width:auto' name="entitySenderId" class="form-control" placeholder="Enter Sender Id">
                                    	<br>
                                		<input id="entityReceiverId" style='width:auto' name="entityReceiverId" class="form-control" placeholder="Enter Receiver Id">
                                    	<br>
                                		<input id="entityCompanyId" style='width:auto' name="entityCompanyId" class="form-control" placeholder="Enter Company Id">
                                		<br>
		                                <input id="saveEntry" style='width:auto' value="Save" type="Submit" class="btn btn-success"></input>
	                            	</form>
	                            </div>
	                        </div>
	                    </div>
	                    <!-- /.row -->
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <!--End of Table-->
        </div>
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->

</body>

</html>